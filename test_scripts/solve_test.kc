# Test script for RiddleWords.solve

# Test integers
set result1 = RiddleWords.solve("50")
expect result1 == 50

# Test floating-point numbers
set result2 = RiddleWords.solve("3.14")
expect result2 == 3.14

# Test negative numbers
set result3 = RiddleWords.solve("-10")
expect result3 == -10

# Test whitespace input must throw
try:
    set _ = RiddleWords.solve("   ")
    expect false   # should not reach here
catch e:
    expect true    # exception expected

# Test invalid input must throw
try:
    set _ = RiddleWords.solve("abc")
    expect false   # should not reach here
catch e:
    expect true    # exception expected
